.register
  position: absolute
  top: 0px
  bottom: 0px
  right: 0px
  width: 100%
  padding-right: 15px
  background-color: rgb(243,79,47) 

  column-background = #FFF

  .top.row
    margin: 5% 0 10% 0

  .welcome.column
    margin-top: 10px !important

    .banner.image
      margin-left: 90px
      height: 80%
      width: auto

    h3
      margin-top: 20px
      margin-bottom: 10px
      font-size: 20px

  .register.column
    background: column-background
    margin: 0 auto

  .center.aligned.column.row
    background: column-background
    -webkit-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5);
    -moz-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5);
    box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5);

  .column
    .ui.segment
      position: absolute
      top: -27px
      width: 90%
      margin: 0 center

      -webkit-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.5);
      -moz-box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.5);
      box-shadow: 0px 0px 8px 0px rgba(0,0,0,0.5);

      input, button
        margin: 5px 0 5px 0
  h1
    margin-left: 35px
  .logo.image
    position: relative
    top: -17px
    width: 35px
    height: 35px
