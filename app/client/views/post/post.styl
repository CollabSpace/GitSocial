.post-panel
  max-width: 500px
  box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.15)

.post-header
  padding: 0px

.post-menu
  font-weight: bold
  margin-top: 12px
  margin-right: 15px
  float: right
  right: 10px
  cursor: pointer

.post-avatar
  border-top-left-radius: 3px
  margin-right: 10px

.post-user
  display: inline
  margin-top: -3px

.post-like-btn
  border-top-left-radius: 0px
  border-left-width: 0px
  border-bottom-width: 0px

.post-share-btn
  border-bottom: 0px none

.post-comment-box
  border-top-right-radius: 0px
  border-right: 0px none
  margin-bottom: -1px !important
  box-shadow: none
